<h1>Edit Song</h1>


<form action="/songs/<%= @song.slug %>" method="POST">
    <input type="hidden" name="_method" value="patch">

    <label for="song_name">Name</label>
    <input type="text" name="song_name" id="song_name" value="<%= @song.name %>">
    <br>
    <% Genre.all.each do |genre| %>
        <label for="<%= genre.id%>"><%= genre.name%></label>
        <% if @song.genres.include?(genre)%>
            <input type="checkbox" name="genres[]" id="<%= genre.id%>" checked="checked" value="<%= genre.id%>">
        <% else %>
            <input type="checkbox" name="genres[]" id="<%= genre.id%>" value="<%= genre.id%>">
        <% end %>
        <br>
    <% end %>

    <label for="artist_name">Artist Name</label>
    <input type="text" name="artist_name" id="artist_name" value="<%= @song.artist.name %>">
    <br><br>
    <input type="submit" value="Save">
</form>