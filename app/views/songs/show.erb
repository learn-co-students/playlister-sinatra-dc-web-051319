<h1>Show</h1>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h2>Song name: <%= @song.name %></h2>
<a href="/artists/<%= @song.artist.slug %>"><h2>Artist name: <%= @song.artist.name %></h2></a>
<% @song.genres.each do |genre|%>
    <a href="/genres/<%= genre.slug %>"><h2><%= genre.name %></h2></a>
<% end %>